    "prettier": "^2.8.8",
    "prettier-plugin-sql": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "remix-flat-routes": "^0.5.8",
    "tailwindcss": "^3.3.2",
    "tailwindcss-radix": "^2.8.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vite": "^4.3.4",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.31.0",
    "vitest-mock-extended": "^1.1.3"
  },
  "engines": {
    "node": "18"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
