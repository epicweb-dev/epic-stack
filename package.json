{
  "name": "epic-stack-template",
  "private": true,
  "sideEffects": false,
  "license": "GPL-3.0-only",
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "scripts": {
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "tsx ./other/build-server.ts",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:server": "cross-env MOCKS=true tsx watch --clear-screen=false --ignore \"app/**\" --ignore \"build/**\" --ignore \"node_modules/**\" ./index.js",
    "dev:remix": "cross-env PORT=\"\" remix dev",
    "prisma:studio": "prisma studio",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "cross-env NODE_ENV=production node .",
    "start:mocks": "cross-env NODE_ENV=production MOCKS=true tsx .",
    "test": "vitest",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install chromium --with-deps",
    "typecheck": "tsc",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report",
    "/server-build"
  ],
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@radix-ui/react-checkbox": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.3",
    "@radix-ui/react-dropdown-menu": "^2.0.4",
    "@radix-ui/react-popover": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.3",
    "@reach/dialog": "^0.18.0",
    "@remix-run/css-bundle": "1.15.0",
    "@remix-run/node": "1.15.0",
    "@remix-run/react": "1.15.0",
    "@remix-run/serve": "1.15.0",
    "@remix-run/server-runtime": "1.15.0",
    "address": "^1.2.2",
    "bcryptjs": "^2.4.3",
    "chokidar": "^3.5.3",
    "close-with-grace": "^1.2.0",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "downshift": "^7.6.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "get-port": "^6.1.2",
    "isbot": "^3.6.10",
    "litefs-js": "^1.1.2",
    "morgan": "^1.10.0",
    "prisma": "^4.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.4.0",
    "remix-auth-form": "^1.3.0",
    "remix-auth-socials": "^2.0.5",
    "spin-delay": "^1.2.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.33.0",
    "@remix-run/dev": "1.15.0",
    "@remix-run/eslint-config": "1.15.0",
    "@remix-run/testing": "1.15.0",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/better-sqlite3": "^7.6.4",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.37.0",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.3",
    "@types/uuid": "^9.0.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-c8": "^0.31.0",
    "autoprefixer": "^10.4.14",
    "c8": "^7.13.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "execa": "^7.1.1",
